{
  "name": "@cumulus/sync-granule",
  "version": "1.9.0",
  "description": "Download a given granule",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "homepage": "https://github.com/nasa/cumulus/tree/master/tasks/sync-granule",
  "repository": {
    "type": "git",
    "url": "https://github.com/nasa/cumulus"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "scripts": {
    "test": "ava",
    "test-coverage": "nyc ava",
    "build": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack",
    "watch": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack --progress -w",
    "prepublishOnly": "PRODUCTION=true npm run build"
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "ava": {
    "files": "tests",
    "serial": true,
    "color": false,
    "verbose": true
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  },
  "dependencies": {
    "@cumulus/common": "^1.9.0",
    "@cumulus/cumulus-message-adapter-js": "^1.0.3",
    "@cumulus/ingest": "^1.9.0",
    "@cumulus/test-data": "^1.9.0",
    "lodash.get": "^4.4.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "fs-extra": "^5.0.0",
    "lodash": "^4.17.5",
    "nyc": "^11.6.0",
    "proxyquire": "^2.0.0",
    "sinon": "^4.5.0",
    "webpack": "~4.5.0",
    "webpack-cli": "~2.0.14"
  }
}
